{
  "extends": "stylelint-config-standard",
  "ignoreFiles": "**/*.md",
  "rules": {
    "declaration-colon-newline-after": null,
    "indentation": [2, {
      "except": ["value"],
      "severity": "warning"
    }],
    "rule-empty-line-before": "never",
    "unit-whitelist": ["px", "%", "s"]
  }
}
