{
  "env": {
    "es6": true,
    "node": true,
    "browser": true,
    "greasemonkey": true,
    "mocha": true
  },
  "globals": {
    "saveAs": true,
    "ZipImagePlayer": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 10
  },
  "plugins": [
    "compat"
  ],
  "extends": [
    "eslint:recommended",
    "plugin:vue/recommended"
  ],
  "rules": {
    "quotes": [
      "error",
      "single"
    ],
    "no-console": "off",
    "key-spacing": "error",
    "indent": [
      "error",
      2
    ],
    "comma-spacing": "error",
    "comma-dangle": [
      "error",
      "always-multiline"
    ],
    "arrow-spacing": "error",
    "keyword-spacing": "error",
    "space-infix-ops": "error",
    "semi": [
      "error",
      "always"
    ],
    "object-curly-spacing": [
      "error",
      "always"
    ],
    "space-before-blocks": "error",
    "space-before-function-paren": [
      "error",
      "never"
    ],
    "sort-keys": [
      "error",
      "asc",
      {
        "caseSensitive": true,
        "natural": false
      }
    ],
    "vue/max-attributes-per-line": [
      2,
      {
        "singleline": 2,
        "multiline": {
          "max": 1,
          "allowFirstLine": false
        }
      }
    ],
    "compat/compat": "warn"
  }
}
